<%=
    render layout: 'home/carousel',
           locals: {
                    id: 'educator-resources-carousel',
                    items: EducatorResourcesHelper.all_educator_resources,
                    view_all: 'View All Resources',
                    view_all_href: '/educator_resources'
                   } do |item| %>

  <a href='<%= "#{item['path']}" %>' class="list-group-item" >
    <img src='<%= "#{item['thumbnail']}" %>' title='<%= "#{item['title']}" %>' alt='<%= "#{item['title']}" %>' aria-hidden="true" />
    <span class="carousel-caption">
      <h3 class="list-group-item-heading"><%= item["title"] %></h3>
    </span>
  </a>
<% end %>
